<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/fragStart">

    <fragment
        android:id="@+id/fragStart"
        android:name="com.ghost.aboutme.FragStart"
        android:label="FragStart"
        tools:layout = "@layout/fragment_frag_start">
        <action
            android:id="@+id/action_fragStart_to_aboutFrag"
            app:destination="@id/aboutFrag"
            app:popUpTo="@+id/fragStart" />
    </fragment>
    <fragment
        android:id="@+id/aboutFrag"
        android:name="com.ghost.aboutme.AboutFrag"
        android:label="AboutFrag"
        tools:layout = "@layout/fragment_about"/>
</navigation>